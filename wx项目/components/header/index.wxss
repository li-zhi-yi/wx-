/* components/header/index.wxss */
view.header{
  width: 750rpx;
  height: 150rpx;
  background:#FF6600;
  position:fixed;
  left: 0;
  top: 0;
  right: 0;
  display:flex;
  z-index: 99999;
}
view.left{
  width: 240rpx;
  height: 150rpx;
}
view.left>image{
  width: 100rpx;
  height: 100rpx;
  margin:30rpx 25rpx;
  border:none;
}
view.right{
  flex:1;
  display:flex;
  flex-direction: column;
  /* text-align:center; */
  color:white;
  font-weight: bold;
}
view.right>view.top{
  width: 100%;
  height: 50rpx;
  margin:20rpx 0 20rpx;
  font-size: 36rpx;
  line-height:50rpx;
}
view.right>view.bottom{
  width: 100%;
  flex:1;
  font-size: 28rpx;
}