/* pages/order/index.wxss */
view.order{
  width: 750rpx;
  box-sizing: border-box;
  padding:0 20rpx;
}

view.item{
  width: 100%;
  display:flex;
  flex-direction: column;
}
view.top{
  width: 750rpx;
  height: 200rpx;
  display: flex;
  margin-bottom:20rpx;
}
image.img{
  width: 180rpx;
  height: 200rpx;
}
view.content{
  display:flex;
  flex-direction: row;
  justify-content: space-between;
}
view.left{
  width: 250rpx;
  display:flex;
  /* border:1px solid black; */
  padding:20rpx 20rpx;
  flex-wrap: nowrap;
  margin:0 20rpx;
  flex-direction: column;
}
text.title{
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom:15rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
text.time{
  font-size: 26rpx;
  color:#ccc;
}
text.product{
  margin-top:10rpx;
  font-size: 28rpx;
  color:black;

}
view.right{
  flex:1;
  display:flex;
  flex-direction: column;
  box-sizing: border-box;
  /* border:1px solid black; */
}
view.right>text.send{
  font-size: 30rpx;
  font-weight: bold;
  margin:20rpx 20rpx;
}
view.right>text.price{
  font-size: 32rpx;
  margin-top:40rpx;
  text-align:right;
  font-weight: bold;
}
view.bottom{
  width: 528rpx;
  align-self: flex-end;
  padding-bottom:20rpx;
  display:flex;
  justify-content: flex-end;
  border-bottom:2rpx solid #ccc;
}
view.bottom>button.btn{
  width: 200rpx;
  margin:0;
  /* margin-right:20rpx; */
  padding:0 !important;
  border:2rpx solid #ccc;
}